<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.assignment.controller.ManagementController"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #ffffff);">
    <top>
        <Label text="Quản lý thu chi"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-padding: 15; -fx-text-fill: #2c3e50;"
               BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <SplitPane orientation="HORIZONTAL" style="-fx-padding: 15;">
            <!-- Left: Table -->
            <VBox spacing="20" style="-fx-background-color: #ffffff; -fx-padding: 25; -fx-border-color: #dcdde1; -fx-border-radius: 8; -fx-background-radius: 8;" prefWidth="500">
                <Label text="Danh sách giao dịch" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <TableView fx:id="transactionTable" prefHeight="400" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7;">
                    <columns>
                        <TableColumn fx:id="dateColumn" text="Ngày tháng" prefWidth="130"/>
                        <TableColumn fx:id="descriptionColumn" text="Mô tả giao dịch" prefWidth="220"/>
                        <TableColumn fx:id="amountColumn" text="Số tiền" prefWidth="100"/>
                        <TableColumn fx:id="typeColumn" text="Loại giao dịch" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Right: Form -->
            <VBox spacing="20" style="-fx-background-color: #ffffff; -fx-padding: 25; -fx-border-color: #dcdde1; -fx-border-radius: 8; -fx-background-radius: 8;" prefWidth="350">
                <Label text="Thêm giao dịch mới" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <Label text="Ngày tháng:" style="-fx-font-size: 14px;"/>
                <DatePicker fx:id="transactionDatePicker" style="-fx-padding: 8;"/>

                <Label text="Mô tả giao dịch:" style="-fx-font-size: 14px;"/>
                <TextField fx:id="transactionDescriptionField" promptText="Nhập mô tả..." style="-fx-padding: 8;"/>

                <Label text="Số tiền:" style="-fx-font-size: 14px;"/>
                <TextField fx:id="transactionAmountField" promptText="Nhập số tiền..." style="-fx-padding: 8;"/>

                <Label text="Loại giao dịch:" style="-fx-font-size: 14px;"/>
                <ChoiceBox fx:id="transactionTypeChoiceBox" style="-fx-padding: 8;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Thu nhập"/>
                            <String fx:value="Chi tiêu"/>
                            <String fx:value="Tiết kiệm"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>

                <Button text="Thêm giao dịch"
                        fx:id="addTransactionButton"
                        onAction="#onAddTransaction"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12; -fx-background-radius: 5;">
                </Button>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
