<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.assignment.controller.SettingsController"
            stylesheets="@../style/Setting.css">
    <VBox alignment="CENTER" spacing="15" prefWidth="400" prefHeight="300">
        <Label text="Select Language:" styleClass="header-label"/>
        <HBox alignment="CENTER" spacing="10">
            <ImageView fx:id="flagImage" fitWidth="32" fitHeight="24" />
            <ChoiceBox fx:id="languageChoiceBox" prefWidth="200"/>
        </HBox>
        <Button text="Apply" onAction="#applyLanguageChange" styleClass="apply-button"/>
    </VBox>
</AnchorPane>
