<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.assignment.controller.ManagementController"
            styleClass="border-pane"
            stylesheets="@../style/Manage.css">
    <top>
        <Label text="Quản lý thu chi"
               fx:id="manageTitleLabel"
               styleClass="title-label" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <SplitPane styleClass="split-pane">
            <VBox spacing="20" styleClass="transaction-list-container" prefWidth="500">
                <HBox spacing="15" styleClass="transaction-controls">
                    <Label fx:id="transactionListTitleLabel" text="Danh sách giao dịch"
                           styleClass="transaction-list-title" />
                    <HBox spacing="10" styleClass="filter-box">
                        <Label text="Tiêu chí:" fx:id="sortCriteriaLabel" styleClass="filter-label" />
                        <ChoiceBox fx:id="sortCriteriaChoiceBox" styleClass="filter-choice-box">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Ngày tháng"/>
                                    <String fx:value="Mô tả"/>
                                    <String fx:value="Số tiền"/>
                                </FXCollections>
                            </items>
                        </ChoiceBox>
                    </HBox>
                    <HBox spacing="10" styleClass="filter-box">
                        <Label text="Thuật toán:" fx:id="sortAlgorithmLabel" styleClass="filter-label" />
                        <ChoiceBox fx:id="sortAlgorithmChoiceBox" styleClass="filter-choice-box">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Bubble Sort"/>
                                    <String fx:value="Insertion Sort"/>
                                    <String fx:value="Selection Sort"/>
                                </FXCollections>
                            </items>
                        </ChoiceBox>
                    </HBox>
                    <Button text="Sắp xếp" fx:id="sortButton" onAction="#onSort" styleClass="sort-button"/>
                </HBox>

                <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS" styleClass="transaction-table">
                    <columns>
                        <TableColumn fx:id="dateColumn" text="Ngày tháng" prefWidth="130"/>
                        <TableColumn fx:id="descriptionColumn" text="Mô tả giao dịch" prefWidth="220"/>
                        <TableColumn fx:id="amountColumn" text="Số tiền" prefWidth="100"/>
                        <TableColumn fx:id="typeColumn" text="Loại giao dịch" prefWidth="120"/>
                        <TableColumn fx:id="actionColumn" text="Hành động" prefWidth="150"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </SplitPane>
    </center>
    <right>
        <VBox spacing="20" styleClass="add-transaction-container" prefWidth="350">
            <Label text="Thêm giao dịch mới" fx:id="addTransactionTitleLabel" styleClass="add-transaction-title"/>
            <Label text="Ngày tháng:" fx:id="transactionDateLabel" styleClass="form-label"/>
            <DatePicker fx:id="transactionDatePicker" styleClass="form-control"/>

            <Label text="Mô tả giao dịch:" fx:id="transactionDescriptionLabel" styleClass="form-label"/>
            <TextField fx:id="transactionDescriptionField" promptText="Nhập mô tả..." styleClass="form-control"/>

            <Label text="Số tiền:" fx:id="transactionAmountLabel" styleClass="form-label"/>
            <TextField fx:id="transactionAmountField" promptText="Nhập số tiền..." styleClass="form-control"/>

            <Label text="Loại giao dịch:" fx:id="transactionTypeLabel" styleClass="form-label"/>

            <ChoiceBox fx:id="transactionTypeChoiceBox" styleClass="form-control">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Thu nhập"/>
                        <String fx:value="Chi tiêu"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
            <Button fx:id="transactionButton" text="Thêm giao dịch" onAction="#onAddTransaction" styleClass="add-button"/>
        </VBox>
    </right>
</BorderPane>
